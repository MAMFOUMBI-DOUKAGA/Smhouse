<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.EnregistrementActivity">


    <ImageView
        android:id="@+id/enreg_activity_imageview_page_enreg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_marginStart="100dp"
        android:src="@drawable/image_page1"

        />


    <TextView
        android:id="@+id/enreg_activity_textview_acroche_page_enreg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enreg_activity_imageview_page_enreg"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-34dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Votre conso en temps réel !"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="" />

    <ImageView
        android:id="@+id/enreg_activity_Imageview_identité_page_enreg"
        android:layout_width="23dp"
        android:layout_height="31dp"
        android:contentDescription="@null"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/enreg_activity_textview_acroche_page_enreg"
        android:src="@drawable/identite" />

    <EditText
        android:id="@+id/enreg_edittext_nom_page_enreg"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enreg_activity_textview_acroche_page_enreg"
        android:layout_marginStart="45dp"
        android:layout_marginTop="50dp"
        android:hint="Saisir votre nom" />

    <ImageView
        android:id="@+id/enreg_activity_Imageview_mail_page_enreg"
        android:layout_width="23dp"
        android:layout_height="31dp"
        android:contentDescription="@null"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/enreg_edittext_nom_page_enreg"
        android:src="@drawable/mail" />

    <EditText
        android:id="@+id/enreg_edittext_mail_page_enreg"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enreg_edittext_nom_page_enreg"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:hint="Saisir votre mail" />

    <ImageView
        android:id="@+id/enreg_activity_Imageview_mot_de_passe_page_enreg"
        android:layout_width="23dp"
        android:layout_height="31dp"
        android:contentDescription="@null"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/enreg_edittext_mail_page_enreg"
        android:src="@drawable/mot_de_passe" />

    <EditText
        android:id="@+id/enreg_edittext_mot_de_passe_page_enreg"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enreg_edittext_mail_page_enreg"
        android:layout_marginTop="20dp"
        android:layout_marginStart="45dp"
        android:hint="Saisir votre mot de passe"
        />

    <Button
        android:id="@+id/enreg_button_enregistrement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/enreg_edittext_mot_de_passe_page_enreg"
        android:text="S'enregistrer"
        />




</RelativeLayout>